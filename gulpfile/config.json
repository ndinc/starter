{
  "root": {
    "src": "./prototype/src",
    "dest": "./prototype/dest",
    "public": "./public"
  },

  "tasks": {
    "deploy": {
      "exclude_glob": [
        ".DS_Store",
        ".sublime-project",
        ".sublime-workspace",
        ".htaccess",
        ".htpasswd"
      ],
      "pretasks": ["wp:production"],
      "tasks": ["deploy:ftp"]
    },

    "exec": {
      "maxBuffer": "600*1024",
      "pipeStdout": true
    },

    "browserSync": {
      "server": {
        "baseDir": "prototype/dest"
      }
    },

    "static": {
      "src": "static",
      "dest": "."
    },

    "js": {
      "src": "javascripts",
      "dest": "javascripts",
      "extractSharedJs": true,
      "entries": {
        "app": ["./app.js"]
      },
      "extensions": ["js"]
    },

    "css": {
      "src": "sass",
      "dest": "stylesheets",
      "autoprefixer": {
        "browsers": ["last 3 version"]
      },
      "sass": {
        "indentedSyntax": true
      },
      "extensions": ["sass", "scss", "css"]
    },

    "html": {
      "src": "html",
      "dest": "./",
      "dataFile": [
        "data/domain.json",
        "data/global.json"
      ],
      "htmlmin": {
        "collapseWhitespace": true
      },
      "extensions": ["html", "json"],
      "excludeFolders": ["sections", "modules", "includes", "helpers", "layouts"]
    },

    "images": {
      "src": "images",
      "dest": "images",
      "extensions": ["jpg", "png", "svg", "gif"]
    },

    "fonts": {
      "src": "fonts",
      "dest": "fonts",
      "extensions": ["woff2", "woff", "eot", "ttf", "svg"]
    },

    "iconFont": {
      "src": "icons",
      "dest": "fonts",
      "sassDest": "generated",
      "extensions": ["woff2", "woff", "eot", "ttf", "svg"]
    },

    "svgSprite": {
      "src": "sprites",
      "dest": "images",
      "extensions": ["svg"]
    }
  }
}
